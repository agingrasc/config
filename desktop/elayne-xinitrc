#read X Resources
[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources

sh ~/.screenlayout/default.sh

setxkbmap -layout us
xmodmap -e 'clear Lock' -e 'keycode 0x42 = Escape'

#various little setting
xset s off
xset s noblank
xset -dpms

feh --bg-center ~/Pictures/wallpaper/summer_wallpaper.jpg

exec i3
